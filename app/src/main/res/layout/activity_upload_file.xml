<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.UploadFileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/uploadFile_BTN_fetch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fetch file"/>

            <Button
                android:id="@+id/uploadFile_BTN_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="select file"/>

            <TextView
                android:id="@+id/uploadFile_TXT_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="no selected file..."/>

            <Button
                android:id="@+id/uploadFile_BTN_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="upload"/>

            <ProgressBar
                android:id="@+id/upload_PRB_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="96dp"
                android:minWidth="96dp"
                android:progress="0"
                android:max="100"
                android:min="0"
                android:layout_marginTop="10dp"
                android:progressTint="#62FF01"/>

            <Button
                android:id="@+id/uploadFile_BTN_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="back"/>



        </LinearLayout>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>